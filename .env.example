# Variables de Entorno - ForUTN Server
# Copia este archivo como .env y configura los valores apropiados

# === CONFIGURACIÓN DEL SERVIDOR ===
NODE_ENV=development
PORT=3000
HOST=localhost

# === BASE DE DATOS ===
# Configuración de PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forutn_db
DB_USER=postgres
DB_PASS=password
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# String de conexión completa (alternativa)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/forutn_db

# === LOGGING ===
LOG_LEVEL=debug
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10

# === SEGURIDAD ===
# JWT para autenticación (si se implementa)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=7d

# Secreto para sesiones
SESSION_SECRET=tu_session_secret_super_seguro_aqui

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# === CORS ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# === ARCHIVOS Y UPLOADS ===
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Azure Blob Storage (si se usa)
AZURE_STORAGE_ACCOUNT=tu_storage_account
AZURE_STORAGE_KEY=tu_storage_key
AZURE_CONTAINER_NAME=forutn-files

# === CACHE ===
# Redis (si se implementa)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === EMAIL ===
# SMTP para notificaciones (si se implementa)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password
SMTP_FROM="ForUTN <noreply@forutn.com>"

# === DESARROLLO ===
# Habilitar logs detallados en desarrollo
DEBUG=forutn:*
VERBOSE_LOGGING=true

# === DOCKER ===
# Variables para Docker Compose
POSTGRES_DB=forutn_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
ADMINER_PORT=8080

# === PERFORMANCE ===
# Configuración de rendimiento
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
COMPRESSION_LEVEL=6

# === FEATURES FLAGS ===
# Habilitar/deshabilitar funcionalidades
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_FILE_UPLOADS=true
ENABLE_SEARCH=true

# === MONITOREO ===
# Health check y métricas
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=false

# === TESTING ===
# Variables para entorno de testing
TEST_DB_NAME=forutn_test_db
TEST_PORT=3001
